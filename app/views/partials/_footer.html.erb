<footer class="is-background-color-secondary pt-6">
  <%
=begin%>
 <div class="is-divider is-background-color-primary m-6">
  </div> 
<%
=end%>
  <div class="columns is-centered mx-4 is-desktop">
    <div class="column has-text-centered is-4">
      <%= link_to root_path, 'aria-label': 'logo' do %>
        <%= image_tag 'logo.png', class: 'mb-6', width: '75%', height: '75%', alt: 'logo INNOSERV' %>
      <% end %>
      <div class="columns is-vcentered mx-4 has-text-weight-bold is-size-5 is-desktop">
        <div class="column has-text-centered">
          <%= link_to "Home",
            root_path, 
            class: "is-color-primary has-text-centered" 
          %>
        </div>
        |
        <div class="column has-text-centered">
          <%= link_to "Videos",
            root_path(anchor: "videos"),
            class: "is-color-primary" 
          %>
        </div>
        |
        <div class="column has-text-centered">
          <%= link_to "About",
            about_path, 
            class: "is-color-primary" 
          %>
        </div>
      </div>
    </div>
    <div class="column">
    </div>
    <div class="column is-one-fifth has-text-centered mr-6">
    <%= link_to ("https://cordis.europa.eu/project/id/290542"), 'aria-label': 'cordis.europa.eu' do %>
      <%= image_tag 'FP7.webp', class:'mb-5', width: '100%', height: '100%', alt: 'Logo European Commission European research Area / Seventh Framework Programme, funded under Socio-economic Sciences & Humanities', loading: 'lazy' %>
    <% end %>
    <a href="https://www.facebook.com/innoserv" target="_blank" rel="noreferrer noopener" aria-label="Facebook">
        <em class="fab fa-facebook fa-2x mx-3"></em>
      </a>
      <a href="https://twitter.com/INNOSERVproject" target="_blank" rel="noreferrer noopener" aria-label="Twitter">
        <em class="fab fa-twitter fa-2x mx-3"></em>
      </a>
      <a href="https://www.youtube.com/channel/UCX-SE-AvqteYfgv1cNA0o2w" target="_blank" rel="noreferrer noopener" aria-label="Youtube">
        <em class="fab fa-youtube fa-2x mx-3"></em>
      </a>
    </div>
  </div>

  <section class="hero is-small mx-5 mt-6 p-1">
    <p class="">
      By INNOSERV (2012-2014). This project (grant agreement nr. 290542) is supported under the Socio-economic and Humanities Programme of FP7. 
    </p>
  </section>
</footer>